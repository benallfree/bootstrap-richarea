{
  "name": "bootstrap-richarea",
  "version": "1.2.0",
  "description": "A Bootstrap-based rich content editor",
  "main": "src/js/index.js",
  "scripts": {
    "dist": "npm run clean && concurrently 'npm run build' 'npm run package' 'npm run assets'",
    "build": "cross-env NODE_ENV=development webpack --progress --hide-modules",
    "package": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "clean": "rm -rf dist/*",
    "assets": "cp -r layouts/* dist",
    "watch": "watch 'npm run build' src",
    "thumbnails": "node ./scripts/thumbnails.js ./src/assets/templates/layouts.html http://richarea.dev/samples/example1.html"
  },
  "bin": {
    "richarea-thumbnails": "./scripts/thumbnails.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/benallfree/bootstrap-richarea.git"
  },
  "keywords": [
    "bootstrap",
    "text",
    "editor",
    "wysiwyg"
  ],
  "author": "Ben Allfree",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benallfree/bootstrap-richarea/issues"
  },
  "homepage": "https://github.com/benallfree/bootstrap-richarea#readme",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "bootstrap-modal-fullscreen": "^1.0.4",
    "draggable": "^4.1.2",
    "jquery": "^3.1.1",
    "lodash": "^4.17.2",
    "marked": "^0.3.6",
    "md5": "^2.2.1",
    "phantomjs-prebuilt": "^2.1.13",
    "q": "^1.4.1",
    "simplemde": "^1.11.2",
    "sortablejs": "^1.4.2",
    "to-markdown": "^3.0.3",
    "url": "^0.11.0",
    "vue": "^2.0.1",
    "vuedraggable": "^2.4.0",
    "webshot": "^0.18.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "change-case": "^3.0.0",
    "clean-css": "^3.4.21",
    "concurrently": "^3.1.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "gm": "^1.23.0",
    "haml-loader": "^0.1.0",
    "html-loader": "^0.4.4",
    "jsdom": "^9.8.3",
    "jslint": "^0.10.3",
    "mkdirp": "^0.5.1",
    "node-notifier": "^4.6.1",
    "node-sass": "^4.1.1",
    "pug": "^2.0.0-beta6",
    "pug-loader": "^2.3.0",
    "sass-loader": "^4.1.1",
    "scss-loader": "0.0.1",
    "style-loader": "^0.13.1",
    "vue-loader": "^9.7.0",
    "watch": "^1.0.1",
    "webpack": "^2.1.0-beta.28",
    "webpack-dev-server": "^2.1.0-beta.0",
    "webpage": "^0.3.0"
  }
}
