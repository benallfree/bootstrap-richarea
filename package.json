{
  "name": "bootstrap-richarea",
  "version": "1.0.1",
  "description": "A Bootstrap-based rich content editor",
  "main": "src/js/index.js",
  "scripts": {
    "package:sass": "npm run build:sass && npm run optimize:css",
    "package:js": "npm run build:js && npm run optimize:js",
    "prepackage": "npm run clean",
    "package": "concurrently 'npm run package:sass' 'npm run package:js' 'npm run assets' 'npm run samples'",
    "build:sass": "node-sass src/sass/richarea.scss > dist/richarea.css",
    "build:js": "webpack",
    "watch": "concurrently 'npm run watch:sass' 'npm run watch:js' 'npm run watch:assets'",
    "watch:sass": "watch 'npm run package:sass' src/sass",
    "watch:js": "watch 'npm run package:js' src/js",
    "watch:assets": "concurrently 'npm run watch:assets:images' 'npm run watch:assets:templates'",
    "watch:assets:images": "watch 'npm run assets:images' src/assets --wait=1",
    "watch:assets:templates": "watch 'npm run assets:templates' src/assets",
    "clean": "rm -rf dist/*",
    "optimize": "concurrently 'npm run optimize:css' 'npm run optimize:js'",
    "optimize:css": "cleancss dist/richarea.css > dist/richarea.min.css",
    "optimize:js": "uglifyjs dist/richarea.js > dist/richarea.min.js",
    "assets": "concurrently 'npm run assets:images' 'npm run assets:templates'",
    "assets:images": "cp -r src/assets/images dist",
    "assets:templates": "cp -r src/assets/templates dist",
    "samples": "concurrently 'npm run samples:bsmf'",
    "samples:bsmf": "rm -rf ./samples/vendor/bootstrap-modal-fullscreen && cp -R node_modules/bootstrap-modal-fullscreen/dist ./samples/vendor/bootstrap-modal-fullscreen",
    "thumbnails": "node ./scripts/thumbnails.js ./src/assets/templates/layouts.html http://richarea.dev/samples/example1.html",
    "layouts:generate": "babel-node ./scripts/layouts.js"
  },
  "bin": {
    "richarea-thumbnails": "./scripts/thumbnails.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/benallfree/bootstrap-richarea.git"
  },
  "keywords": [
    "bootstrap",
    "text",
    "editor",
    "wysiwyg"
  ],
  "author": "Ben Allfree",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benallfree/bootstrap-richarea/issues"
  },
  "homepage": "https://github.com/benallfree/bootstrap-richarea#readme",
  "devDependencies": {
    "async": "^2.1.4",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "change-case": "^3.0.0",
    "clean-css": "^3.4.21",
    "concurrently": "^3.1.0",
    "glob": "^7.1.1",
    "gm": "^1.23.0",
    "jquery": "^3.1.1",
    "jsdom": "^9.8.3",
    "jslint": "^0.10.3",
    "lodash": "^4.17.2",
    "mkdirp": "^0.5.1",
    "node-notifier": "^4.6.1",
    "node-sass": "^3.13.0",
    "phantomjs-prebuilt": "^2.1.13",
    "q": "^1.4.1",
    "uglifyjs": "^2.4.10",
    "watch": "^1.0.1",
    "webpack": "^1.13.3",
    "webpage": "^0.3.0",
    "webshot": "^0.18.0"
  }
}
